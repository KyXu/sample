extends ../layout

block content
  .container
    .row
      .col-md-7
        img.media-object(src="#{movie.poster}", alt="#{movie.title}")
        .panel.panel-default
          .panel-heading
            h3 comments:
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    a(href="#comments", data-cid="#{item._id}",data-tid="#{item.from._id}")
                    img.media-object(src="", style = "width:64px; height: 64px;")
                  .media-body
                    h4.media-heading #{item.from.name}
                    p #{item.content}
          #comments
            form#commentForm(method="POST", action="/user/comment")
              input(type="hidden", name="comment[movie]",value="#{movie._id}")
              input(type="hidden", name="comment[from]", value="#{user._id}")
              .form-group
                textarea.form-control(name="comment[content]", row="3")
              button.btn.btn-primary(type='submit') Submit
      .col-md-5
        dl.dl-horizontal
          dt Name
          dd #{movie.title}
          dt Director
          dd #{movie.director}
          dt Country
          dd #{movie.country}
          dt Lan
          dd #{movie.language}
          dt Year
          dd #{movie.year}
          dt Summary
          dd #{movie.summary}
