extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th user name
            th Date
            th View
            th Update
            th Delete
          tbody
            each item in users
              tr(class="item-id-#{item._id}")
                td #{item.name}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_blank", href="../user/#{item._id}") View
                td: a(target="_blank", href="../admin/update/#{item._id}") Update
                td
                  button.btn.btn-danger.del(type="button", data-id="#{item._id}") Delete
